{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "app",
  "version": "0.1.0",
  "identifier": "xyz.oneshot",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Oneshot",
        "hiddenTitle": true,
        "width": 1200,
        "height": 700,
        "minWidth": 768,
        "minHeight": 500,
        "resizable": true,
        "focus": false,
        "dragDropEnabled": true,
        "decorations": true,
        "center": true,
        "windowEffects": {
          "effects": ["sidebar"],
          "state": "followsWindowActiveState",
          "radius": 9
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
